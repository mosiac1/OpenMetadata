<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>

    <!-- Populate deps in the lib and libs folder -->
    <moduleSets>
        <!-- Service module and dependencies -->
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>${project.groupId}:common</include>
                <include>${project.groupId}:openmetadata-spec</include>
                <include>${project.groupId}:openmetadata-service</include>
                <include>${project.groupId}:openmetadata-authorization</include>
                <include>${project.groupId}:openmetadata-ui</include>
                <include>${project.groupId}:openmetadata-authorization-ranger-shim</include>
            </includes>
            <binaries>
                <outputDirectory>libs</outputDirectory>
                <includeDependencies>true</includeDependencies>
                <unpack>false</unpack>
                <directoryMode>755</directoryMode>
                <fileMode>644</fileMode>
            </binaries>
        </moduleSet>
        <!-- Ranger Authorizer Implementation -->
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>${project.groupId}:openmetadata-authorization-ranger</include>
            </includes>
            <binaries>
                <outputDirectory>libs/ranger-openmetadata-plugin-impl</outputDirectory>
                <includeDependencies>true</includeDependencies>
                <unpack>false</unpack>
                <directoryMode>755</directoryMode>
                <fileMode>644</fileMode>
            </binaries>
        </moduleSet>
    </moduleSets>


    <fileSets>
        <fileSet>
            <directory>${project.basedir}./conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}./bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}./bootstrap</directory>
            <outputDirectory>bootstrap</outputDirectory>
        </fileSet>


    </fileSets>

    <files>
        <file>
            <source>${project.basedir}./README.md</source>
            <outputDirectory/>
        </file>
    </files>
</assembly>
